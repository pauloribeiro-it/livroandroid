<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hellomaterial.paulo.ribeiro.it.hellomaterial">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ExemploElevationActivity" />
        <activity android:name=".ExemploRipple" />
        <activity android:name=".ExemploFloatingButton" />
        <activity
            android:name=".ExemploCardView"
            android:label="@string/title_activity_exemplo_card_view" />
        <activity
            android:name=".ExemploRecycleViewActivity"
            android:label="@string/title_activity_exemplo_recycle_view" />
        <activity
            android:name=".ExemploRevealEffectActivity"
            android:label="@string/title_activity_exemplo_reveal_effect"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>